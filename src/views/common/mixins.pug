mixin btnPrice(text, price, formName, type)
	.btn-price(class=`btn-price--${formName}`)
		.btn-price__price(class=`btn-price__price--${formName}`)=price
		button(id=`${formName}Btn` type=`${type}` class=`btn-price__btn btn-price__btn--${formName}`)=text